# project.config - Project Configuration File
# This file contains all the variables needed to customize the FastAPI-Celery template
# Edit these values for your new project

# Project Identity
PROJECT_NAME="Companion"
PROJECT_TITLE="Companion App API"
PROJECT_DESCRIPTION="A FastAPI application with Celery for background tasks"
PROJECT_VERSION="1.0.0"

# Database Configuration
DB_NAME="companion_db"
DB_USER="companion_user"
DB_PASSWORD="companion_password_123"

# Container Configuration
CONTAINER_PREFIX="companion"

# Network Configuration
API_HOST_PORT="8010"
FLOWER_HOST_PORT="5557"
POSTGRES_HOST_PORT="5432"

# Domain Module (optional - rename 'users' module to your domain)
# Set to empty string to keep 'users' module
DOMAIN_MODULE=""  # e.g., "products", "orders", "customers"

# Additional Configuration
REDIS_DB="0"
RABBITMQ_USER="admin"
RABBITMQ_PASSWORD="admin"
FLOWER_USER="admin"
FLOWER_PASSWORD="admin"

# Git Configuration (optional)
GIT_REMOTE_URL=""  # Set if you want to add a new git remote
GIT_BRANCH="main"